tcp:
host: "{{syslog_host}}:{{syslog_port}}"
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains tags "forwarded"}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if ssl.enabled}}
ssl:
  enabled: {{ssl.enabled}}
  verification_mode: "{{ssl.verification_mode}}"
  certificate: |
    {{ssl.certificate}}
  key: |
    {{ssl.key}}
  {{#if ssl.key_passphrase}}
  key_passphrase: "{{ssl.key_passphrase}}"
  {{/if}}
{{/if}}
processors:
  - add_locale: ~
  - add_fields:
      target: ''
      fields:
        ecs.version: 1.9.0
